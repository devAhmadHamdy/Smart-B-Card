<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.all_cards.AllCardsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dimen10"
        android:id="@+id/rv_all_cards"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen60"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/no_saved_nearby"
        android:textAlignment="center"
        android:textSize="@dimen/txt22"
        android:id="@+id/tv_no_near"
        android:fontFamily="@font/nearbytitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>